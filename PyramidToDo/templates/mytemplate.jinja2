{% extends "layout.jinja2" %}

{% block content %}
  <div id="main">
    <div class="row form-group new-task-block">
      <div class="col-md-6 task-input">
        <input id="textinput" type="text" placeholder="Yout task" class="form-control input-md shw-ts">
      </div>
      <div class="col-md-6 btn-group-flex">
        <button class="btn btn-primary btn-lg btn-add">
          <p>Добавить</p>
        </button>
        <button class="btn btn-primary btn-lg btn-clear">
          <p>Стереть</p>
        </button>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8 shw-ts task-list">
        {% for task in tasks %}
          {% if task[1]!=True %}
            <div class="task-item btn-group-toggle" data-toggle="buttons">
              <button class="btn btn-check">
                <input type="checkbox" autocomplete="off">
              </button>
              <span>
            {{ task[2] }}
          </span>
              <button class="btn btn-delete">
              </button>
            </div>
          {% else %}
            <div class="task-item inactive btn-group-toggle" data-toggle="buttons">
              <button class="btn btn-check active">
                <input type="checkbox" checked autocomplete="off">
              </button>
              <span>
            {{ task[2] }}
          </span>
              <button class="btn btn-delete">
              </button>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
  <script src="../static/js/main.js"></script>
{% endblock content %}
